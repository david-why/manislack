{
  "display_information": {
    "name": "Manislack",
    "description": "Manifold Markets on Slack",
    "background_color": "#6366f1"
  },
  "features": {
    "bot_user": {
      "display_name": "Manislack",
      "always_online": true
    },
    "slash_commands": [
      {
        "command": "/manislack-channel-opts",
        "description": "Manages the subscriptions for a channel",
        "usage_hint": "[#channel]",
        "should_escape": true
      },
      {
        "command": "/manislack-info",
        "description": "Learn how to use Manislack",
        "should_escape": false
      },
      {
        "command": "/manislack-market",
        "description": "Fetch a single market into this channel",
        "usage_hint": "<url|slug|id>",
        "should_escape": false
      }
    ],
    "unfurl_domains": ["manifold.markets"]
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "chat:write",
        "chat:write.public",
        "commands",
        "links:read",
        "links:write",
        "channels:read",
        "groups:read",
        "mpim:read",
        "im:read"
      ]
    }
  },
  "settings": {
    "event_subscriptions": {
      "bot_events": ["link_shared"]
    },
    "interactivity": {
      "is_enabled": true
    },
    "org_deploy_enabled": false,
    "socket_mode_enabled": true,
    "token_rotation_enabled": false
  }
}
